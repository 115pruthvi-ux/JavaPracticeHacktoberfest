
package perfectnumber;

/**
 *
 * @author baiana
 */
public class PerfectNumber {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
  float r=0;
	int d=0,y=1000;
	do {
	  for(int x=1;x<y;x++){
		  r=y%x;
		    if(r ==0)
			      d+=x;	
	  }
	   if (d==y)
     System.out.println (y+" is a perfect number\n");
		y--;
		d=0;
	  }while(y!=0);
  }
}
  
